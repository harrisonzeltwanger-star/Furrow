{
  "expo": {
    "name": "Furrow",
    "slug": "furrow-hay-portal",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "furrow",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2d5a27"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.furrowag.hayportal",
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos of hay stacks for listings",
        "NSPhotoLibraryUsageDescription": "Select photos for listings"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2d5a27"
      },
      "package": "com.furrowag.hayportal",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "@react-native-community/datetimepicker",
      [
        "expo-image-picker",
        {
          "photosPermission": "Select photos for hay listings",
          "cameraPermission": "Take photos of hay stacks"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "43ade97d-7b15-4222-9927-26f44687d898"
      }
    },
    "owner": "harrisonjz"
  }
}
